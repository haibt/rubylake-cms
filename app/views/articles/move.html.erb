<h1>Move Article</h1>
<% @theme.each do |theme|%>
<div class="container" style="background: <%= theme.color_background_article %>;padding:10px">
	<p>Title: <span><%= @article.title %></span></p>
	
	<%= form_for :article do |f| %>
		<p> Category Older: 
			 <% @categories.each do |category|%>
			 	<% if @article.category_id == category.id %> 
			 	<%= category.name %> 
			 	<% end %> 
		 	<% end %>
 		</p>
 	<p>Category New: </p>
	<select name="new_category_id">
 		 <% @categories.each do |category|%>
 		<option value="<%= category.id %>" <% if @article.category_id == category.id %> <%= selected="selected" %> <% end %> >
 			<%=  category.name %>
 		</option>
 		<% end %>
 	</select>
  <div class="form-actions">
    <%= f.submit "Submit", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), {:action => 'show'}, :class => 'btn' %>
  </div>
	<% end %>
</div>
<% end %>